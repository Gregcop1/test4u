<body class="{{body_class}}">
    <header>
        <nav class="main">
            <ul class="mainNav">
                <li><h1><a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a></h1></li>
