{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    {{#if image}}<a href="{{url}}"><img src="{{image}}" width="190" height="190" alt="" class="cover"/></a>{{/if}}<!--
    --><div class="post-content">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <p class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> 
            {{#author}}
                &nbsp;<span class="author">- Par <a href="{{url}}">{{name}}</a></span>
            {{/author}}
            &nbsp;<span class="tags">- {{tags}}</span>
        </p>
        <p>{{excerpt words="55"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </div>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
